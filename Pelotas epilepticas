var p1;
var p2;

function setup() {
  createCanvas(400, 400);
  p1 = new Ball();
  p2 = new Ball();
}

function draw() {
  background(220);
  p1.mostrar();
  p1.moverx();
  if (p1.salirx()) {
    p1.botarx();
  }
  p1.movery();
  if (p1.saliry()) {
    p1.botary();
  }
  p2.mostrar();
  p2.mostrar();
  p2.moverx();
  if (p2.salirx()) {
    p2.botarx();
  }
  p2.movery();
  if (p2.saliry()) {
    p2.botary();
  }
}

class Ball {
  constructor() {
    this.x = random(0, 400);
    this.y = random(0, 400);
    this.tam = 50;
    this.velx = 10;
    this.vely = 10;
    this.red = random(0, 255);
    this.green = random(0, 255);
    this.blue = random(0, 255);

  }
  mostrar() {
    fill(this.red, this.blue, this.green);
    ellipse(this.x, this.y, this.tam, this.tam);
  }
  moverx() {
    this.x = this.x + this.velx;
  }
  salirx() {
    var res;
    if (this.x < 25 || this.x > 375) {
      res = true;
    } else {
      res = false
    }
    return res;
  }
  botarx() {
    this.velx = this.velx * -1
    this.red = random(0, 255);
    this.green = random(0, 255);
    this.blue = random(0, 255);

  }
  movery() {
    this.y = this.y + this.vely;
  }
  saliry() {
    var res;
    if (this.y < 25 || this.y > 375) {
      res = true;
    } else {
      res = false
    }
    return res;
  }
  botary() {
    this.vely = this.vely * -1
  }
}
